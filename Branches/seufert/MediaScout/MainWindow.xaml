                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="154*" />
                                        <ColumnDefinition Width="204.536*" />
                                    </Grid.ColumnDefinitions>
                                    <CheckBox FontWeight="Normal" Foreground="White" Height="Auto" IsChecked="True" Margin="10,87,99,0" Name="chkRenameTVFiles" RenderTransformOrigin="0.584,0.619" VerticalAlignment="Top" Content="Rename Files" Checked="chkRenameTVFiles_Checked" Unchecked="chkRenameTVFiles_Unchecked" />
                                    <CheckBox FontWeight="Normal" Foreground="White" IsChecked="True" Margin="10,47,55,0" Name="chkEpPosters" Height="Auto" VerticalAlignment="Top" Content="Fetch Episode Images" Checked="chkEpPosters_Checked" Unchecked="chkEpPosters_Unchecked" />
