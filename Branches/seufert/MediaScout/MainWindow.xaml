                                    <CheckBox FontWeight="Normal" Foreground="White" Height="Auto" IsChecked="True" Margin="10,67,61,0" Name="chkMoveTVFiles" VerticalAlignment="Top" Content="Move Unsorted Files" Checked="chkMoveTVFiles_Checked" Unchecked="chkMoveTVFiles_Unchecked"/>
