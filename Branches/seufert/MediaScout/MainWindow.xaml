        <ContextMenu x:Key="cmActors">
            <MenuItem Header="Fetch" Click="btnFetchSelectedActorThumb_Click"/>
            <Separator />
            <MenuItem Header="Strip Image" Click="btnStripSelectedActorThumb_Click"/>
            <MenuItem Header="Change Image" Click="btnChangeActorThumb_Click"/>
            <Separator />
            <MenuItem Header="Open In Explorer" Click="btnOpenActorThumb_Click"/>
        </ContextMenu>

        <Style TargetType="{x:Type ListBox}" x:Key="ItemsList">
            <Setter Property="ItemsPanel">  
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        </Style>       

        <Style TargetType="{x:Type TextBox}" x:Key="DescStyle">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="{StaticResource TBackground}" />
        </Style>
        
        <Style TargetType="{x:Type TextBox}" x:Key="TitleStyle">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="{StaticResource TBackground}" />
        </Style>        

        <DataTemplate x:Key="dtMultipleTVShows">
            <TextBlock Text="{Binding Mode=OneWay, Path=Foldername}" ContextMenu="{StaticResource cmMultipleSeries}" MouseDown="TVShowItem_DoubleClick" Padding="5" Cursor="Hand"/>
        </DataTemplate>
        <DataTemplate x:Key="dtTVShows">
            <TextBlock Text="{Binding Mode=OneWay, Path=Foldername}" ContextMenu="{StaticResource cmSeries}" MouseDown="TVShowItem_DoubleClick" Padding="5" Cursor="Hand"/>
        </DataTemplate>
        <DataTemplate x:Key="dtUnsortedEpisodesCollection">
            <TextBlock Text="{Binding Mode=OneWay, Path=Foldername}" ContextMenu="{StaticResource cmUnsortedEpisodeCollection}" MouseDown="TVShowItem_DoubleClick" Padding="5" Cursor="Hand"/>
        </DataTemplate>

        <DataTemplate x:Key="dtMultipleSeasons">
            <Grid Margin="10" Width="130" Height="170" ContextMenu="{StaticResource cmMultipleSeasons}" MouseDown="SeasonItem_DoubleClick" ToolTip="{Binding Folderpath}" Cursor="Hand">
                <Grid.LayoutTransform>
                    <ScaleTransform                                    
                                    ScaleX="{Binding ElementName=zoomslider, Path=Value}"
                                    ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Image Source="{StaticResource imgposter}" Margin="10" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Mode=OneWay, Path=Name}" Margin="20,30" Background="{StaticResource TBackground}" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Bottom" TextAlignment="Center" Padding="5" />
            </Grid>
        </DataTemplate>
        
        <DataTemplate x:Key="dtSeasons">
            <Grid Margin="10" Width="130" Height="170" ContextMenu="{StaticResource cmSeasons}" MouseDown="SeasonItem_DoubleClick" ToolTip="{Binding Folderpath}" Cursor="Hand">
                <Grid.LayoutTransform>
                    <ScaleTransform                                    
                                    ScaleX="{Binding ElementName=zoomslider, Path=Value}"
                                    ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Image Source="{StaticResource imgposter}" Margin="10" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Mode=OneWay, Path=Name}" Margin="20,30" Background="{StaticResource TBackground}" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Bottom" TextAlignment="Center" Padding="5" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="dtMultipleEpisodes">
            <Grid Margin="10" Width="170" Height="100" ContextMenu="{StaticResource cmMultipleEpisodes}" ToolTip="{Binding Filepath}" Cursor="Hand">
                <Grid.LayoutTransform>
                    <ScaleTransform                                    
                                    ScaleX="{Binding ElementName=zoomslider, Path=Value}"
                                    ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Image Source="{StaticResource imgposter}" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Mode=OneWay, Path=Name}" Margin="17,10" Background="{StaticResource TBackground}" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center" Padding="5" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="dtEpisodes">
            <Grid Margin="10" Width="170" Height="100" ContextMenu="{StaticResource cmEpisodes}" ToolTip="{Binding Filepath}" Cursor="Hand">
                <Grid.LayoutTransform>
                    <ScaleTransform                                    
                                    ScaleX="{Binding ElementName=zoomslider, Path=Value}"
                                    ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Image Source="{StaticResource imgposter}" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Mode=OneWay, Path=Name}" Margin="17,10" Background="{StaticResource TBackground}" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center" Padding="5" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="dtMultipleMovies">
            <TextBlock Text="{Binding Mode=OneWay, Path=Foldername}" ContextMenu="{StaticResource cmMultipleMovies}" MouseDown="MovieItem_DoubleClick" Padding="5" Cursor="Hand" />
        </DataTemplate>

        <DataTemplate x:Key="dtMovies">
            <TextBlock Text="{Binding Mode=OneWay, Path=Foldername}" ContextMenu="{StaticResource cmMovies}" MouseDown="MovieItem_DoubleClick" Padding="5" Cursor="Hand" />
        </DataTemplate>

        <DataTemplate x:Key="dtUnsortedFilesCollection">
            <TextBlock Text="{Binding Mode=OneWay, Path=Foldername}" ContextMenu="{StaticResource cmUnsortedFilesCollection}" MouseDown="MovieItem_DoubleClick" Padding="5" Cursor="Hand" />
        </DataTemplate>

        <DataTemplate x:Key="dtMultipleMovieFiles">
            <Grid Margin="10" Width="130" Height="170" ContextMenu="{StaticResource cmMultipleMovieFiles}" ToolTip="{Binding Filepath}" Cursor="Hand">
                <Grid.LayoutTransform>
                    <ScaleTransform                                    
                                    ScaleX="{Binding ElementName=zoomslider, Path=Value}"
                                    ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Image Source="{StaticResource imgposter}" Margin="10" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Mode=OneWay, Path=Name}" Margin="20,30" Background="{StaticResource TBackground}" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Bottom" TextAlignment="Center" Padding="5" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="dtMovieFiles">
            <Grid Margin="10" Width="130" Height="170" ContextMenu="{StaticResource cmMovieFiles}" ToolTip="{Binding Filepath}" Cursor="Hand">
                <Grid.LayoutTransform>
                    <ScaleTransform                                    
                                    ScaleX="{Binding ElementName=zoomslider, Path=Value}"
                                    ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Image Source="{StaticResource imgposter}" Margin="10" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Mode=OneWay, Path=Name}" Margin="20,30" Background="{StaticResource TBackground}" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Bottom" TextAlignment="Center" Padding="5" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="dtActors">
            <Grid ContextMenu="{StaticResource cmActors}" Margin="5">
                <Grid.LayoutTransform>
                    <ScaleTransform                                    
                                    ScaleX="{Binding ElementName=zoomslider, Path=Value}"
                                    ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Image Grid.Column="0" Grid.RowSpan="2" Source="{Binding Mode= OneWay, Path=Thumb, TargetNullValue={StaticResource imgactor}}" Margin="5,0" Stretch="Uniform"/>
                <TextBox Grid.Column="1" Text="{Binding Mode=TwoWay, Path=Name, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Mode=TwoWay, Path=Role, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid x:Name="LayoutRoot">
        <TabControl Margin="8,12" x:Name="tcTabs" IsSynchronizedWithCurrentItem="True" SelectionChanged="tcTabs_SelectionChanged" Background="Transparent" HorizontalContentAlignment="Center" TabStripPlacement="Top" BorderThickness="0" FlowDirection="RightToLeft">
            <TabItem x:Name="tabOptions" Header="Options" Background="{x:Null}" FlowDirection="LeftToRight">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="193*" />
                        <RowDefinition Height="11.981*" />
                        <RowDefinition Height="156.5*" />
                        <RowDefinition Height="11.75*" />
                        <RowDefinition Height="123.808*" />
                    </Grid.RowDefinitions>
