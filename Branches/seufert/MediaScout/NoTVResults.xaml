<Window x:Class="MediaScoutGUI.NoTVResults"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="No Search Results" Height="215" Width="405" Background="{DynamicResource WindowBackground}" Icon="/MediaScoutGUI;component/Resources/tvscouticon.png" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock Height="40" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Margin="12,0">No results were found...</TextBlock>
        <TextBlock TextWrapping="Wrap" Margin="12,27,12,0" Height="55" VerticalAlignment="Top">You can either change (its suggested you broaden or refine) the search, or cancel the search.</TextBlock>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,12,16" Name="btnCancel" VerticalAlignment="Bottom" Width="75" Click="btnCancel_Click">Cancel</Button>
        <Button Height="23" HorizontalAlignment="Left" Margin="10,0,0,16" Name="btnSearch" VerticalAlignment="Bottom" Width="88" Click="btnSearch_Click">Search Again</Button>
        <TextBox Margin="12,0,12,51" Name="txtTerm" Height="23" VerticalAlignment="Bottom" />
        <Label Margin="12,72,0,80" Name="label1" HorizontalAlignment="Left" Width="119.975" FontWeight="Bold">Search Term</Label>
    </Grid>
</Window>
