<Window x:Class="MediaScoutGUI.FoldersDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Folders"
        Loaded="Window_Loaded"
        Height="266" Width="409"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Background="Gray"
        >
    <Grid Name="GridLayout" Height="Auto">
        <Button Content="Add" Height="23" HorizontalAlignment="Right" Margin="0,12,12,0" Name="btnAdd" VerticalAlignment="Top" Width="67" Click="btnBrowseFolder_Click" TabIndex="1" />
        <Button Content="OK" Height="23" HorizontalAlignment="Left" Margin="222,191,0,0" Name="btnOk" VerticalAlignment="Top" Width="75" IsDefault="True" Click="btnOk_Click" TabIndex="4" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="305,191,0,0" Name="btnCancel" VerticalAlignment="Top" Width="75" Click="btnCancel_Click" TabIndex="5" />
        <ListBox Height="173" HorizontalAlignment="Left" Margin="12,12,0,0" Name="lstFolders" VerticalAlignment="Top" Width="285" SelectionChanged="lstFolders_SelectionChanged" ItemsSource="{Binding}" />
        <Button Content="Delete" Height="23" HorizontalAlignment="Right" Margin="0,41,12,0" Name="btnDelete" TabIndex="1" VerticalAlignment="Top" Width="67" Visibility="Collapsed" Click="btnDelete_Click" />
    </Grid>
</Window>
