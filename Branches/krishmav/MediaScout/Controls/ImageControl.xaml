<UserControl x:Class="MediaScoutGUI.Controls.ImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Controls="clr-namespace:MediaScoutGUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <UserControl.Resources>        
        <BitmapImage x:Key="imgloading" UriSource="/MediaScoutGUI;component/Resources/loading.png" />
    </UserControl.Resources>
    <Grid>
        <Image x:Name="myImage"/>
        <ProgressBar Name="LoadingPB" Visibility="Collapsed" IsIndeterminate="True" Background="{x:Null}" Margin="0" BorderThickness="0" BorderBrush="{x:Null}" />
    </Grid>
</UserControl>
