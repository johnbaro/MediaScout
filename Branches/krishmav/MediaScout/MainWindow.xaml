<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Controls="clr-namespace:MediaScoutGUI.Controls"
    mc:Ignorable="d"
	x:Class="MediaScoutGUI.MainWindow"
	Title="MediaScout"
    Loaded="Window_Loaded" Closing="Window_Closing" Closed="Window_Closed" StateChanged="Window_StateChanged"
	Width="885" Height="627" Icon="/MediaScoutGUI;component/Resources/tvscouticon.png"
    WindowStartupLocation="CenterScreen" Margin="0" Background="Gray">
    
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo ThumbnailClipMargin="8,35,8,8">
            <TaskbarItemInfo.ThumbButtonInfos>
                <ThumbButtonInfoCollection>
                    <ThumbButtonInfo x:Name="_tbPauseButton"
                                     Description="Pause"
                                     ImageSource="/MediaScoutGUI;component/Resources/pause.png" 
                                     DismissWhenClicked="True"
                                     Click="_tbPauseButton_Click"
                                     Visibility="{Binding ElementName=btnCancel, Path=Visibility}" />
                    <ThumbButtonInfo x:Name="_tbCancelButton"
                                     Description="Cancel"
                                     ImageSource="/MediaScoutGUI;component/Resources/cancel.png"                                      
                                     Click="_tbCancelButton_Click"
                                     Visibility="{Binding ElementName=btnCancel, Path=Visibility}" />
                    <ThumbButtonInfo x:Name="_tbCancelAllButton"
                                     Description="Cancel All"
                                     ImageSource="/MediaScoutGUI;component/Resources/cancel.png"                                      
                                     Click="_tbCancelAllButton_Click"
                                     Visibility="{Binding ElementName=btnCancel, Path=Visibility}" />
                </ThumbButtonInfoCollection>
            </TaskbarItemInfo.ThumbButtonInfos>
        </TaskbarItemInfo>
    </Window.TaskbarItemInfo>
    <Window.Resources>
        <BitmapImage x:Key="PauseImage" UriSource="/MediaScoutGUI;component/Resources/pause.png"/>
        <BitmapImage x:Key="PlayImage" UriSource="/MediaScoutGUI;component/Resources/play.png"/>
        
        <SolidColorBrush x:Key="TBackground" Opacity="0.4" Color="Black"/>
        <BitmapImage x:Key="imgoverlay" UriSource="/MediaScoutGUI;component/Resources/refresh.png" />
        <BitmapImage x:Key="imgposter" UriSource="/MediaScoutGUI;component/Resources/poster.png" />
        <BitmapImage x:Key="imgactor" UriSource="/MediaScoutGUI;component/Resources/actors_default.jpg" />
        <SolidColorBrush Color="Transparent" Opacity="1.0" x:Key="TColor" />

        <ContextMenu x:Key="cmSeriesMain" Visibility="Collapsed">
            <MenuItem Header="Process All TV Shows" Click="btnProcessAllTV_Click"/>
            <MenuItem Header="Strip All TV Shows" Click="btnStripAllTV_Click"/>
            <MenuItem Header="Reload All TV Shows" Click="btnReloadAllTV_Click"/>
            <!--<Separator />
            <MenuItem Header="Download All TV Shows Subtitles" Click="btnDownloadAllTVSubtitles_Click"/>-->
        </ContextMenu>        

        <ContextMenu x:Key="cmSeries">
            <MenuItem Header="Fetch" Click="btnFetchSelectedTV_Click"/>
            <MenuItem Header="Process" Click="btnProcessSelectedTV_Click"/>
            <MenuItem Header="Strip" Click="btnStripSelectedTV_Click"/>
            <MenuItem Header="Reload" Click="btnReloadSelectedTV_Click"/>
            <Separator />
            <MenuItem Header="Change Poster" Click="btnChangeSelectedTVPoster_Click"/>
            <MenuItem Header="Change Backdrop" Click="btnChangeSelectedTVBackdrop_Click"/>
            <MenuItem Header="Change Banner" Click="btnChangeSelectedTVBanner_Click"/>
            <Separator />
            <!--<MenuItem Header="Download Subtitles" Click="btnDownloadSelectedTVSubtitles_Click"/>-->
            <MenuItem Header="Open In Explorer" Click="btnOpenTVShow_Click"/>
            <MenuItem Header="Open In TVDb" Click="btnOpenTVDb_Click" />
        </ContextMenu>

        <ContextMenu x:Key="cmSeasonsMain" Visibility="Collapsed">
            <MenuItem Header="Strip All Seasons" Click="btnStripAllSeasons_Click"/>
        </ContextMenu>

        <ContextMenu x:Key="cmSeasons">
            <MenuItem Header="Process" Click="btnProcessSelectedSeason_Click"/>
            <MenuItem Header="Strip" Click="btnStripSelectedSeason_Click"/>
            <Separator />
            <MenuItem Header="Change Poster" Click="btnChangeSelectedSeasonPoster_Click"/>
            <MenuItem Header="Change Backdrop" Click="btnChangeSelectedSeasonBackdrop_Click"/>
            <Separator />
            <!--<MenuItem Header="Download Subtitles" Click="btnDownloadSelectedSeasonSubtitles_Click"/>-->
            <MenuItem Header="Open In Explorer" Click="btnOpenSeason_Click"/>
            <MenuItem Header="Open Metadata In Explorer" Click="btnOpenSeasonMetadata_Click"/>
        </ContextMenu>

        <ContextMenu x:Key="cmEpisodesMain">
            <MenuItem Header="Strip All Episodes" Click="btnStripAllEpisodes_Click"/>
        </ContextMenu>

        <ContextMenu x:Key="cmEpisodes">
            <MenuItem Header="Fetch" Click="btnFetchSelectedEpisode_Click"/>
            <MenuItem Header="Process" Click="btnProcessSelectedEpisode_Click"/>
            <MenuItem Header="Strip" Click="btnStripSelectedEpisode_Click"/>          
            <Separator />
            <MenuItem Header="Get Thumb From File" Click="btnEpisodePosterFromFile_Click"/>
            <!--<Separator />
            <MenuItem Header="Download Subtitle" Click="btnDownloadSelectedEpisodeSubtitles_Click"/>
            <MenuItem Header="Find Subtitle" Click="btnFindSelectedEpisodeSubtitles_Click"/>-->
            <Separator />
            <MenuItem Header="Open In Explorer" Click="btnOpenEpisode_Click"/>
            <MenuItem Header="Open XML Metadata In Explorer" Click="btnOpenEpisodeXMLMetadata_Click"/>
        </ContextMenu>

        <ContextMenu x:Key="cmMoviesMain" Visibility="Collapsed">
            <MenuItem Header="Process All Movies" Click="btnProcessAllMovie_Click"/>
            <MenuItem Header="Strip All Movies" Click="btnStripAllMovie_Click"/>
            <MenuItem Header="Reload All Movies" Click="btnReloadAllMovie_Click"/>
            <!--<Separator />
            <MenuItem Header="Download All Movies Subtitles" Click="btnDownloadAllMovieSubtitles_Click"/>-->            
        </ContextMenu>

        <ContextMenu x:Key="cmMovies">
            <MenuItem Header="Fetch" Click="btnFetchSelectedMovie_Click"/>
            <MenuItem Header="Process" Click="btnProcessSelectedMovie_Click"/>
            <MenuItem Header="Strip" Click="btnStripSelectedMovie_Click"/>
            <MenuItem Header="Reload" Click="btnReloadSelectedMovie_Click"/>
            <Separator />
            <MenuItem Header="Change Poster" Click="btnChangeMoviePoster_Click"/>
            <MenuItem Header="Change Backdrop" Click="btnChangeMovieBackdrop_Click"/>
            <Separator />
            <!--<MenuItem Header="Download Subtitles" Click="btnDownloadSelectedMovieSubtitles_Click"/>-->
            <MenuItem Header="Open In Explorer" Click="btnOpenMovie_Click"/>
        </ContextMenu>
        
        <ContextMenu x:Key="cmMovieFiles">
            <MenuItem Header="Process" Click="btnProcessSelectedMovieFile_Click"/>
            <MenuItem Header="Strip" Click="btnStripSelectedMovieFile_Click"/>
            <Separator />
            <MenuItem Header="Change Poster" Click="btnChangeMovieFilePoster_Click"/>
            <MenuItem Header="Change Backdrop" Click="btnChangeMovieBackdrop_Click"/>
            <!--<Separator />
            <MenuItem Header="Download Subtitle" Click="btnDownloadSelectedMovieFileSubtitles_Click"/>
            <MenuItem Header="Find Subtitle" Click="btnFindSelectedMovieFileSubtitles_Click"/>-->
            <Separator />
            <MenuItem Header="Open In Explorer" Click="btnOpenMovie_Click"/>
        </ContextMenu>

        <ContextMenu x:Key="cmActors">
            <MenuItem Header="Fetch" Click="btnFetchSelectedActorThumb_Click"/>
            <Separator />
            <MenuItem Header="Strip Image" Click="btnStripSelectedActorThumb_Click"/>
            <MenuItem Header="Change Image" Click="btnChangeActorThumb_Click"/>
            <Separator />
            <MenuItem Header="Open In Explorer" Click="btnOpenActorThumb_Click"/>
        </ContextMenu>

        <Style TargetType="{x:Type ListBox}" x:Key="ItemsList">
            <Setter Property="ItemsPanel">  
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        </Style>       

        <Style TargetType="{x:Type TextBox}" x:Key="DescStyle">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="{StaticResource TBackground}" />
        </Style>
        
        <Style TargetType="{x:Type TextBox}" x:Key="TitleStyle">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="{StaticResource TBackground}" />
        </Style>

        <DataTemplate x:Key="dtTVShows3DEffects">
           <Grid Margin="10" Width="120" Height="170" MouseDown="TVShowItem_DoubleClick" Cursor="Hand">
                <Image Source="{Binding Mode=OneWay, Path=IPoster, TargetNullValue={StaticResource imgposter}}" Margin="10" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
                   <Image.BitmapEffect>
                        <OuterGlowBitmapEffect GlowSize="24.0" GlowColor="Black" Opacity="0.6" />
                    </Image.BitmapEffect> 
                </Image>
                <TextBlock Text="{Binding Mode=OneWay, Path=Name}" Margin="10" Height="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Bottom" TextTrimming="WordEllipsis" TextAlignment="Center" Background="Transparent">
                    <TextBlock.BitmapEffect>
                        <OuterGlowBitmapEffect GlowSize="24.0" GlowColor="Black" Opacity="1.0" />
                    </TextBlock.BitmapEffect>
                </TextBlock>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="dtTVShows">
            <Grid Margin="10" Width="130" Height="170" ContextMenu="{StaticResource cmSeries}" MouseDown="TVShowItem_DoubleClick" ToolTip="{Binding Folderpath}" Cursor="Hand">
                <Grid.LayoutTransform>
                    <ScaleTransform                                    
                                    ScaleX="{Binding ElementName=zoomslider, Path=Value}"
                                    ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Image Source="{StaticResource imgposter}" Margin="10" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Mode=OneWay, Path=Name}" Margin="20,30" Background="{StaticResource TBackground}" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Bottom" TextAlignment="Center" Padding="5" />
            </Grid>
        </DataTemplate>       

        <DataTemplate x:Key="dtSeasons">
            <Grid Margin="10" Width="130" Height="170" ContextMenu="{StaticResource cmSeasons}" MouseDown="SeasonItem_DoubleClick" ToolTip="{Binding Folderpath}" Cursor="Hand">
                <Grid.LayoutTransform>
                    <ScaleTransform                                    
                                    ScaleX="{Binding ElementName=zoomslider, Path=Value}"
                                    ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Image Source="{StaticResource imgposter}" Margin="10" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Mode=OneWay, Path=Name}" Margin="20,30" Background="{StaticResource TBackground}" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Bottom" TextAlignment="Center" Padding="5" />
            </Grid>
        </DataTemplate>
        
        <DataTemplate x:Key="dtEpisodes">
            <Grid Margin="10" Width="170" Height="100" ContextMenu="{StaticResource cmEpisodes}" ToolTip="{Binding Filepath}" Cursor="Hand">
                <Grid.LayoutTransform>
                    <ScaleTransform                                    
                                    ScaleX="{Binding ElementName=zoomslider, Path=Value}"
                                    ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Image Source="{StaticResource imgposter}" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Mode=OneWay, Path=Name}" Margin="17,10" Background="{StaticResource TBackground}" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Center" TextAlignment="Center" Padding="5" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="dtMovies">
            <Grid Margin="10" Width="130" Height="170" ContextMenu="{StaticResource cmMovies}"  MouseDown="MovieItem_DoubleClick" ToolTip="{Binding Folderpath}" Cursor="Hand">
                <Grid.LayoutTransform>
                    <ScaleTransform                                    
                                    ScaleX="{Binding ElementName=zoomslider, Path=Value}"
                                    ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Image Source="{StaticResource imgposter}" Margin="10" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Mode=OneWay, Path=Name}" Margin="20,30" Background="{StaticResource TBackground}" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Bottom" TextAlignment="Center" Padding="5" />
            </Grid>
        </DataTemplate>
        
        <DataTemplate x:Key="dtMovieFiles">
            <Grid Margin="10" Width="130" Height="170" ContextMenu="{StaticResource cmMovieFiles}" ToolTip="{Binding Filepath}" Cursor="Hand">
                <Grid.LayoutTransform>
                    <ScaleTransform                                    
                                    ScaleX="{Binding ElementName=zoomslider, Path=Value}"
                                    ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Image Source="{StaticResource imgposter}" Margin="10" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Text="{Binding Mode=OneWay, Path=Name}" Margin="20,30" Background="{StaticResource TBackground}" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Bottom" TextAlignment="Center" Padding="5" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="dtActors">
            <StackPanel Name="spactor" Margin="5" Width="75" ContextMenu="{StaticResource cmActors}" Cursor="Hand">
                <StackPanel.LayoutTransform>
                    <ScaleTransform                                    
                        ScaleX="{Binding ElementName=zoomslider, Path=Value}"
                        ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </StackPanel.LayoutTransform>
                <Grid Width="75" Height="100">                    
                    <Image Source="{Binding Mode= OneWay, Path=Thumb, TargetNullValue={StaticResource imgactor}}" Margin="5,0" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding Mode=OneWay, Path=Name}" Margin="5,5" Background="{StaticResource TBackground}" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Bottom" TextAlignment="Center" Padding="2" />
                    </Grid>
                <TextBlock Name="tbRole" Text="{Binding Mode=OneWay, Path=Role}" Margin="5,0" Background="{StaticResource TBackground}" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Bottom" TextAlignment="Center" Padding="2" />
            </StackPanel>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Path=Role}" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Collapsed" TargetName="tbRole" />
                    <Setter Property="Height" Value="105" TargetName="spactor" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>

    <Grid x:Name="LayoutRoot">
        <TabControl Margin="8,12,8,50" x:Name="tcTabs" IsSynchronizedWithCurrentItem="True" SelectionChanged="tcTabs_SelectionChanged" Background="Transparent" HorizontalContentAlignment="Center" TabStripPlacement="Top" BorderThickness="0" FlowDirection="RightToLeft">
            <TabItem x:Name="tabOptions" Header="Options" Background="{x:Null}" FlowDirection="LeftToRight">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="193*" />
                        <RowDefinition Height="11.981*" />
                        <RowDefinition Height="156.5*" />
                        <RowDefinition Height="11.75*" />
                        <RowDefinition Height="123.808*" />
                    </Grid.RowDefinitions>
                    <GroupBox Margin="8,0" Name="gbtvoptions" BorderThickness="0" Foreground="White" FontWeight="Bold"  Background="{StaticResource TBackground}">
                        <Grid Height="Auto" VerticalAlignment="Stretch">
                            <Grid Margin="0,11,6,57" x:Name="grdRenameTV" HorizontalAlignment="Right" Width="308">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20*" />
                                    <RowDefinition Height="98*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="68*" />
                                    <ColumnDefinition Width="104*" />
                                    <ColumnDefinition Width="136*" />
                                </Grid.ColumnDefinitions>
                                <TextBox Margin="0,6,4,0" x:Name="txtTVRenameFormat" VerticalAlignment="Top" Height="21" Text="" TextChanged="txtTVRenameFormat_TextChanged" LostFocus="txtTVRenameFormat_LostFocus" Grid.Row="1" FontWeight="Normal" Grid.ColumnSpan="2" />
                                <Label x:Name="label2" Content="File Format :" FontWeight="Normal" d:LayoutOverrides="HorizontalAlignment" HorizontalAlignment="Stretch" Width="Auto" Foreground="White" Padding="0" Grid.ColumnSpan="1" VerticalContentAlignment="Center" />
                                <TextBlock Margin="5" TextWrapping="Wrap" Grid.Column="2" Grid.Row="1" Foreground="White" FontWeight="Normal"><Run FontWeight="Bold" Text="Variables: " Language="en-au" /><LineBreak /><Run Text="{}{0} = Series Name" Language="en-au" /><LineBreak /><Run Text="{}{1} = Season Number" Language="en-au" /><LineBreak /><Run Text="{}{2} = Episode Name" Language="en-au" /><LineBreak /><Run Text="{}{3} = Episode Number" Language="en-au" /><LineBreak /></TextBlock>
                                <Label Content="Ex:" Background="{StaticResource TBackground}" Margin="0" Name="lblTVRenameExample" Grid.ColumnSpan="2" Padding="5,0" Foreground="White" Grid.Column="1" VerticalContentAlignment="Center" />
                                <TextBox Height="23" Margin="0,30,5,0" Name="txtSeasonNumZeroPadding" VerticalAlignment="Top" HorizontalAlignment="Right" Width="22.4" TextChanged="txtSeasonNumZeroPad_TextChanged" LostFocus="txtSeasonNumZeroPadding_LostFocus" Grid.Row="1" FontWeight="Normal" Grid.Column="1">0</TextBox>
                                <Label FontWeight="Bold" Margin="9,29,0,0" Name="label8" Grid.Row="1" Foreground="White" HorizontalAlignment="Left" Width="134.841" Height="26.047" VerticalAlignment="Top" Grid.ColumnSpan="2">Season Num Zero Pad</Label>
                                <TextBox HorizontalAlignment="Right" Margin="0,63,5,0" Name="txtEpisodeNumZeroPadding" Width="22" TextChanged="txtEpisodeNumZeroPad_TextChanged" LostFocus="txtEpisodeNumZeroPadding_LostFocus" Grid.Row="1" Height="23" VerticalAlignment="Top" FontWeight="Normal" Grid.Column="1">2</TextBox>
                                <Label FontWeight="Bold" Margin="7,61,0,0" Name="label10" Height="26.484" VerticalAlignment="Top" Grid.Row="1" Foreground="White" HorizontalAlignment="Left" Width="139.841" Grid.ColumnSpan="2">Episode Num Zero Pad</Label>
                            </Grid>
                            <GroupBox Header="Processing Options" Margin="7,31,0,6.711" Name="gbMovieProcessingOptions" HorizontalAlignment="Left" Width="481">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="154*" />
                                        <ColumnDefinition Width="204.536*" />
                                    </Grid.ColumnDefinitions>
                                    <CheckBox FontWeight="Normal" Foreground="White" Height="16.017" IsChecked="True" Margin="10,87,70.912,0" Name="chkRenameTVFiles" RenderTransformOrigin="0.584,0.619" VerticalAlignment="Top">Rename files</CheckBox>
                                    <CheckBox FontWeight="Normal" Foreground="White" IsChecked="True" Margin="10,47,33.776,0" Name="chkEpPosters" Height="15.96" VerticalAlignment="Top" Content="Fetch Episode Images"></CheckBox>
                                    <CheckBox FontSize="12" FontWeight="Normal" Foreground="White" IsChecked="True" Margin="10,27,33.777,0" Name="chkSeasonPosters" Height="22.04" VerticalAlignment="Top" Content="Fetch Season Images"></CheckBox>
                                    <CheckBox FontWeight="Normal" Foreground="White" Height="15.96" IsChecked="True" Margin="10,67,33.777,0" Name="chkMoveTVFiles" VerticalAlignment="Top">Move Unsorted Files</CheckBox>
                                    <CheckBox FontSize="12" FontWeight="Normal" Foreground="White" Height="15.96" IsChecked="True" Margin="10,7,46,0" Name="chkSeriesPosters" VerticalAlignment="Top" Content="Fetch Series Images"></CheckBox>
                                    <Grid Margin="12,5,6,1" Grid.Column="1">
                                        <CheckBox Checked="chkdownloadAllTVImages_Checked" FontWeight="Normal" Foreground="White" HorizontalAlignment="Left" IsChecked="False" IsEnabled="True" Margin="10,0" Name="chkdownloadAllTVImages" Unchecked="chkdownloadAllTVImages_Unchecked" VerticalAlignment="Top">Download All Images</CheckBox>
                                        <CheckBox Checked="chkdownloadAllTVBackdrops_Checked" FontWeight="Normal" Foreground="White" HorizontalAlignment="Left" IsChecked="True" IsEnabled="True" Margin="20,20,10,10" Name="chkdownloadAllTVBackdrops" Unchecked="chkdownloadAllTVBackdrops_Unchecked" VerticalAlignment="Top" Width="151">Download All Backdrops</CheckBox>
                                        <CheckBox Checked="chkdownloadAllTVPosters_Checked" FontWeight="Normal" Foreground="White" IsChecked="False" IsEnabled="True" Margin="20,40,70.027,0" Name="chkdownloadAllTVPosters" Unchecked="chkdownloadAllTVPosters_Unchecked" VerticalAlignment="Top" Height="15.96">Download All Posters</CheckBox>
                                        <CheckBox Checked="chkdownloadAllTVBanners_Checked" FontWeight="Normal" Foreground="White" IsChecked="False" IsEnabled="True" Margin="20,60,66.37,0" Name="chkdownloadAllTVBanners" Unchecked="chkdownloadAllTVBanners_Unchecked" Height="16.329" VerticalAlignment="Top">Download All Banners</CheckBox>
                                        <CheckBox Checked="chkdownloadAllTVSeasonPosters_Checked" FontWeight="Normal" Foreground="White" IsChecked="False" IsEnabled="True" Margin="20,80,29.07,0" Name="chkdownloadAllTVSeasonPosters" Unchecked="chkdownloadAllTVSeasonPosters_Unchecked" VerticalAlignment="Top" Height="15.96">Download All Season Posters</CheckBox>
                                        <CheckBox Checked="chkdownloadAllTVSeasonBackdrops_Checked" FontWeight="Normal" Foreground="White" Height="15.96" IsChecked="False" IsEnabled="True" Margin="20,100,10,0" Name="chkdownloadAllTVSeasonBackdrops" Unchecked="chkdownloadAllTVSeasonBackdrops_Unchecked" VerticalAlignment="Top">Download All Season Backdrops</CheckBox>
                                    </Grid>
                                    <CheckBox Content="Save Actors Images" FontWeight="Normal" Foreground="White" Height="16.017" IsChecked="True" Margin="10,106,46,0" Name="chkSaveTVActors" RenderTransformOrigin="0.584,0.619" VerticalAlignment="Top" Width="Auto" Checked="chkSaveTVActors_Checked" Unchecked="chkSaveTVActors_Unchecked" />
                                </Grid>
                            </GroupBox>
                            <CheckBox Height="Auto" Margin="187,11,0,0" Name="chkTVFSWatcher" VerticalAlignment="Top" FontWeight="Normal" Foreground="White" ToolTip="If enabled, all episodes inside the folder are automatically processed, which can be manually merged to one of the locations in TV Folders" Checked="chkTVFSWatcher_Checked" Unchecked="chkTVFSWatcher_Unchecked" IsEnabled="False" HorizontalAlignment="Left" Width="Auto" Visibility="Visible" Content="Dropbox Folder" />
                            <GroupBox Header=" Folder Name" Height="53" HorizontalAlignment="Right" Margin="0,126,9,0" Name="groupBox2" VerticalAlignment="Top" Width="305">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="65*" />
                                        <ColumnDefinition Width="72*" />
                                        <ColumnDefinition Width="12*" />
                                        <ColumnDefinition Width="0*" />
                                        <ColumnDefinition Width="64*" />
                                        <ColumnDefinition Width="73*" />
                                        <ColumnDefinition Width="8*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Specials" FontWeight="Bold" Foreground="White" Height="Auto" HorizontalAlignment="Left" Margin="6,0" Padding="0" VerticalAlignment="Center" Width="Auto" />
                                    <TextBox FontWeight="Normal" Height="Auto" Margin="0" Name="txtSpecialsFolderName" Text="Specials" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="1" />
                                    <Label Content="Season" FontWeight="Bold" Foreground="White" Height="Auto" Margin="6,0" Padding="0,0,0,0" VerticalAlignment="Center" Grid.Column="4" HorizontalAlignment="Left" Width="Auto" />
                                    <TextBox Margin="0,4" x:Name="txtSeasonFolderName" VerticalAlignment="Center" Height="Auto" Text="Season" TextWrapping="Wrap" LostFocus="txtSeasonFolderName_LostFocus" FontWeight="Normal" Grid.Column="5" />
                                </Grid>
                            </GroupBox>
                            <TextBox Height="23" HorizontalAlignment="Left" Margin="293,7,0,0" Name="txtTVDropBox" VerticalAlignment="Top" Width="195" LostFocus="txtTVDropBox_LostFocus" FontWeight="Normal" />
                            <Button BorderThickness="0" Content="..." Height="23" HorizontalAlignment="Left" Margin="456,7,0,0" Name="btnBrowserTVDropBox" VerticalAlignment="Top" Width="32" Click="btnBrowserTVDropBox_Click" />
                            <Button Content="Set TV Folders" Height="23" HorizontalAlignment="Left" Margin="11,7,0,0" Name="btnSetTVFolders" VerticalAlignment="Top" Width="170" Click="btnSetTVFolders_Click" />
                        </Grid>
                    </GroupBox>
                    <GroupBox Margin="8,0" Grid.Row="2" Name="gbmovieoptions" BorderThickness="0" Foreground="White" FontWeight="Bold" Background="{StaticResource TBackground}">
                        <Grid VerticalAlignment="Stretch">
                            <Grid Margin="0,9,8,0" Name="gridRenameMovie" Height="134" VerticalAlignment="Top" HorizontalAlignment="Right" Width="306">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="68*" />
                                    <ColumnDefinition Width="99*" />
                                    <ColumnDefinition Width="139*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="21*" />
                                    <RowDefinition Height="7*" />
                                    <RowDefinition Height="22*" />
                                    <RowDefinition Height="7*" />
                                    <RowDefinition Height="20*" />
                                    <RowDefinition Height="7*" />
                                    <RowDefinition Height="22*" />
                                    <RowDefinition Height="28*" />
                                </Grid.RowDefinitions>
                                <TextBox LostFocus="txtMovieFileRenameFormat_LostFocus" Name="txtMovieFileRenameFormat" TextChanged="txtMovieFileRenameFormat_TextChanged" FontWeight="Normal" Height="22" VerticalAlignment="Top" Grid.Row="2" Grid.ColumnSpan="2" />
                                <Label FontWeight="Normal" Name="label7" HorizontalAlignment="Stretch" Width="Auto" Foreground="White" Padding="0" Grid.ColumnSpan="1" VerticalContentAlignment="Center">File Format :</Label>
                                <TextBlock TextWrapping="Wrap" Foreground="White" FontWeight="Normal" Grid.Row="7" Grid.ColumnSpan="3" Margin="5,0,0,0" Height="18" VerticalAlignment="Bottom">
                                    <Run FontWeight="Bold" Text="Variables: " Language="en-au" />
                                    <Run Text="{}{0} = Movie Name" Language="en-au" />
                                    <Run Text="{}{1} = Production Year" Language="en-au" /></TextBlock>
