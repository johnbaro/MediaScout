<Window x:Class="MediaScoutGUI.TitleSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Title" Height="107" Width="300"
        Loaded="Window_Loaded" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Name="gridlayout">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="204*" />
            <ColumnDefinition Width="74*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*" />
            <RowDefinition Height="18*" />
            <RowDefinition Height="23*" />
        </Grid.RowDefinitions>
        <ComboBox Name="cbTitles" SelectedIndex="0" SelectionChanged="cbTitles_SelectionChanged" FontSize="18" FontWeight="Bold" Grid.ColumnSpan="2" Margin="0" />
        <Button Content="OK" Grid.Row="2" Name="bntOK" Grid.Column="1" Click="bntOK_Click" Margin="0" />
    </Grid>
</Window>
