                            <Image Margin="1,40.96,0,43.04" x:Name="imgTVPoster" Stretch="Uniform" HorizontalAlignment="Left" Width="114.387" />
                            <Border Margin="164.521,40.96,135.163,43.04" BorderThickness="0" BorderBrush="Black">
                                <Image Margin="0,0,0,0" x:Name="imgTVBackdrop" Stretch="Uniform" HorizontalAlignment="Left"  />
                            </Border>
                            <Label VerticalAlignment="Top" Content="Selected Series" FontSize="14" FontWeight="Bold" x:Name="lblSelectedSeries" Visibility="Hidden" />
                        </Grid>
                        <Grid Grid.Column="1" Margin="8,8,9,162" x:Name="grdSeasonView"  Visibility="Hidden">
                            <Label Height="28" HorizontalAlignment="Left" x:Name="lblSelectedSeason" FontSize="14" FontWeight="Bold"  VerticalAlignment="Top" Visibility="Hidden" Content="Selected Season"/>
                            <Image Margin="8,41.96,0,0" Name="imgSeasonPoster" Stretch="Uniform" HorizontalAlignment="Left" Height="153.04" VerticalAlignment="Top" Width="174.54" />
                        </Grid>
                        <Grid Grid.Column="1" Margin="8,8,9,162" x:Name="grdEpisodeView" Visibility="Hidden">
                            <Image Margin="8,41.96,0,0" x:Name="imgEpisodePoster"  Stretch="Uniform" HorizontalAlignment="Left" Height="153.04" VerticalAlignment="Top" Width="200.08" />
