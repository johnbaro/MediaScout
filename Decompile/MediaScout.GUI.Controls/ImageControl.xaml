<UserControl x:Class="MediaScout.GUI.Controls.ImageControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <UserControl.Resources>
    <BitmapImage x:Key="imgloading" UriSource="/Resources/loading.png" />
  </UserControl.Resources>
  <Grid>
    <Image Name="myImage" />
    <ProgressBar Name="LoadingPB" Visibility="Collapsed" IsIndeterminate="True" Margin="0" BorderThickness="0" Background="{x:Null}" BorderBrush="{x:Null}" />
  </Grid>
</UserControl>