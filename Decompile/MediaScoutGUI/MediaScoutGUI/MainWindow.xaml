    <Window.TaskbarItemInfo>
        <TaskbarItemInfo ThumbnailClipMargin="8,35,8,8">
            <TaskbarItemInfo.ThumbButtonInfos>
                <ThumbButtonInfoCollection>
                    <ThumbButtonInfo x:Name="_tbPauseButton" Description="Pause" ImageSource="/MediaScoutGUI.Resources/pause.png" DismissWhenClicked="True" Visibility="{Binding ElementName=mnuCancelBar, Path=Visibility}" Click="_tbPauseButton_Click" />
                    <ThumbButtonInfo x:Name="_tbCancelButton" Description="Cancel" ImageSource="/MediaScoutGUI.Resources/cancel.png" Visibility="{Binding ElementName=mnuCancelBar, Path=Visibility}" Click="_tbCancelButton_Click" />
                    <ThumbButtonInfo x:Name="_tbCancelAllButton" Description="Cancel All" ImageSource="/MediaScoutGUI.Resources/cancel.png" Visibility="{Binding ElementName=mnuCancelBar, Path=Visibility}" Click="_tbCancelAllButton_Click" />
                </ThumbButtonInfoCollection>
            </TaskbarItemInfo.ThumbButtonInfos>
        </TaskbarItemInfo>
    </Window.TaskbarItemInfo>
