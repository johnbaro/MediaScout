        <BitmapImage x:Key="imgaddposter" UriSource="/MediaScoutGUI.Resources/addposter.png" />
        <BitmapImage x:Key="imgaddbackdrop" UriSource="/MediaScoutGUI.Resources/addbackdrop.png" />
        <BitmapImage x:Key="imgaddbanner" UriSource="/MediaScoutGUI.Resources/addbanner.png" />
        <SolidColorBrush x:Key="TColor" Color="Transparent" Opacity="1.0" />
