        <Style x:Key="ItemsList" TargetType="{x:Type ListBox}">
            <Setter Property="ItemsControl.ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        </Style>
        <Style x:Key="DescStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Control.Foreground" Value="#FFFFFFFF" />
            <Setter Property="Control.Background" Value="{StaticResource TBackground}" />
        </Style>
        <Style x:Key="TitleStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Control.Foreground" Value="#FFFFFFFF" />
            <Setter Property="Control.Background" Value="{StaticResource TBackground}" />
        </Style>
        <DataTemplate x:Key="nameTemplate">
            <TextBlock Text="{Binding Mode=OneWay, XPath=.}" />
        </DataTemplate>
        <DataTemplate x:Key="dtMultipleTVShows">
            <TextBlock ContextMenu="{StaticResource cmMultipleSeries}" Padding="5" Cursor="Hand" Text="{Binding Mode=OneWay, Path=Foldername}" />
        </DataTemplate>
        <DataTemplate x:Key="dtTVShows">
            <TextBlock ContextMenu="{StaticResource cmSeries}" Padding="5" Cursor="Hand" Text="{Binding Mode=OneWay, Path=Foldername}" />
        </DataTemplate>
        <DataTemplate x:Key="dtUnsortedEpisodesCollection">
            <TextBlock ContextMenu="{StaticResource cmUnsortedEpisodeCollection}" Padding="5" Cursor="Hand" Text="{Binding Mode=OneWay, Path=Foldername}" />
        </DataTemplate>
        <DataTemplate x:Key="dtMultipleSeasons">
            <Grid Margin="10" Width="130" Height="170" ContextMenu="{StaticResource cmMultipleSeasons}" Cursor="Hand" ToolTip="{Binding Folderpath}">
                <Grid.LayoutTransform>
                    <ScaleTransform ScaleX="{Binding ElementName=zoomslider, Path=Value}" ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Image Source="{StaticResource imgposter}" Margin="10" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Margin="20,30" Background="{StaticResource TBackground}" TextBlock.Foreground="#FFFFFFFF" TextWrapping="Wrap" VerticalAlignment="Bottom" TextBlock.TextAlignment="Center" Padding="5" Text="{Binding Mode=OneWay, Path=Name}" />
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="dtSeasons">
            <Grid Margin="10" Width="130" Height="170" ContextMenu="{StaticResource cmSeasons}" Cursor="Hand" ToolTip="{Binding Folderpath}">
                <Grid.LayoutTransform>
                    <ScaleTransform ScaleX="{Binding ElementName=zoomslider, Path=Value}" ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Image Source="{StaticResource imgposter}" Margin="10" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Margin="20,30" Background="{StaticResource TBackground}" TextBlock.Foreground="#FFFFFFFF" TextWrapping="Wrap" VerticalAlignment="Bottom" TextBlock.TextAlignment="Center" Padding="5" Text="{Binding Mode=OneWay, Path=Name}" />
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="dtSeasonUnsortedEpisodes">
            <Grid Margin="10" Width="130" Height="170" ContextMenu="{StaticResource cmSeasonUnsortedEpisodes}" Cursor="Hand" ToolTip="{Binding Folderpath}">
                <Grid.LayoutTransform>
                    <ScaleTransform ScaleX="{Binding ElementName=zoomslider, Path=Value}" ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Image Source="{StaticResource imgposter}" Margin="10" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Margin="20,30" Background="{StaticResource TBackground}" TextBlock.Foreground="#FFFFFFFF" TextWrapping="Wrap" VerticalAlignment="Bottom" TextBlock.TextAlignment="Center" Padding="5" Text="{Binding Mode=OneWay, Path=Name}" />
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="dtMultipleEpisodes">
            <Grid Margin="10" Width="170" Height="100" ContextMenu="{StaticResource cmMultipleEpisodes}" Cursor="Hand" ToolTip="{Binding Filepath}">
                <Grid.LayoutTransform>
                    <ScaleTransform ScaleX="{Binding ElementName=zoomslider, Path=Value}" ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Image Source="{StaticResource imgposter}" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Margin="17,10" Background="{StaticResource TBackground}" TextBlock.Foreground="#FFFFFFFF" TextWrapping="Wrap" VerticalAlignment="Center" TextBlock.TextAlignment="Center" Padding="5" Text="{Binding Mode=OneWay, Path=Name}" />
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="dtEpisodes">
            <Grid Margin="10" Width="170" Height="100" ContextMenu="{StaticResource cmEpisodes}" Cursor="Hand" ToolTip="{Binding Filepath}">
                <Grid.LayoutTransform>
                    <ScaleTransform ScaleX="{Binding ElementName=zoomslider, Path=Value}" ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Image Source="{StaticResource imgposter}" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Margin="17,10" Background="{StaticResource TBackground}" TextBlock.Foreground="#FFFFFFFF" TextWrapping="Wrap" VerticalAlignment="Center" TextBlock.TextAlignment="Center" Padding="5" Text="{Binding Mode=OneWay, Path=Name}" />
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="dtMultipleMovies">
            <TextBlock ContextMenu="{StaticResource cmMultipleMovies}" Padding="5" Cursor="Hand" Text="{Binding Mode=OneWay, Path=Foldername}" />
        </DataTemplate>
        <DataTemplate x:Key="dtMovies">
            <TextBlock ContextMenu="{StaticResource cmMovies}" Padding="5" Cursor="Hand" Text="{Binding Mode=OneWay, Path=Foldername}" />
        </DataTemplate>
        <DataTemplate x:Key="dtUnsortedFilesCollection">
            <TextBlock ContextMenu="{StaticResource cmUnsortedFilesCollection}" Padding="5" Cursor="Hand" Text="{Binding Mode=OneWay, Path=Foldername}" />
        </DataTemplate>
        <DataTemplate x:Key="dtMultipleMovieFiles">
            <Grid Margin="10" Width="130" Height="170" ContextMenu="{StaticResource cmMultipleMovieFiles}" Cursor="Hand" ToolTip="{Binding Filepath}">
                <Grid.LayoutTransform>
                    <ScaleTransform ScaleX="{Binding ElementName=zoomslider, Path=Value}" ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Image Source="{StaticResource imgposter}" Margin="10" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Margin="20,30" Background="{StaticResource TBackground}" TextBlock.Foreground="#FFFFFFFF" TextWrapping="Wrap" VerticalAlignment="Bottom" TextBlock.TextAlignment="Center" Padding="5" Text="{Binding Mode=OneWay, Path=Name}" />
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="dtMovieFiles">
            <Grid Margin="10" Width="130" Height="170" ContextMenu="{StaticResource cmMovieFiles}" Cursor="Hand" ToolTip="{Binding Filepath}">
                <Grid.LayoutTransform>
                    <ScaleTransform ScaleX="{Binding ElementName=zoomslider, Path=Value}" ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Image Source="{StaticResource imgposter}" Margin="10" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Margin="20,30" Background="{StaticResource TBackground}" TextBlock.Foreground="#FFFFFFFF" TextWrapping="Wrap" VerticalAlignment="Bottom" TextBlock.TextAlignment="Center" Padding="5" Text="{Binding Mode=OneWay, Path=Name}" />
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="dtActors">
            <Grid ContextMenu="{StaticResource cmActors}" Margin="5">
                <Grid.LayoutTransform>
                    <ScaleTransform ScaleX="{Binding ElementName=zoomslider, Path=Value}" ScaleY="{Binding ElementName=zoomslider, Path=Value}" />
                </Grid.LayoutTransform>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Image Grid.Column="0" Grid.RowSpan="2" Margin="5,0" Stretch="Uniform" Source="{Binding Mode=OneWay, Path=Thumb, TargetNullValue={StaticResource imgactor}}" />
                <TextBox Grid.Column="1" Margin="5" Text="{Binding Mode=TwoWay, Path=Name, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Grid.Column="1" Grid.Row="2" Margin="5" Text="{Binding Mode=TwoWay, Path=Role, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="625*" />
            <ColumnDefinition Width="218*" />
        </Grid.ColumnDefinitions>
        <TabControl Name="tcTabs" Margin="8,12" IsSynchronizedWithCurrentItem="True" Background="#00FFFFFF" HorizontalContentAlignment="Center" TabStripPlacement="Top" BorderThickness="0" FlowDirection="RightToLeft" Grid.ColumnSpan="3" SelectionChanged="tcTabs_SelectionChanged">
