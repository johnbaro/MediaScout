                                    <RowDefinition Height="20*" />
                                    <RowDefinition Height="98*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="68*" />
                                    <ColumnDefinition Width="104*" />
                                    <ColumnDefinition Width="136*" />
                                </Grid.ColumnDefinitions>
