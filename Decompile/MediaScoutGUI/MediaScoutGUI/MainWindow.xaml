                                <Label Name="label8" FontWeight="Bold" Margin="9,29,0,0" Grid.Row="1" Foreground="#FFFFFFFF" HorizontalAlignment="Left" Width="134.841" Height="26.047" VerticalAlignment="Top" Grid.ColumnSpan="2">Season Num Zero Pad</Label>
                                <TextBox Name="txtEpisodeNumZeroPadding" HorizontalAlignment="Right" Margin="0,63,5,0" Width="22" Grid.Row="1" Height="23" VerticalAlignment="Top" FontWeight="Normal" Grid.Column="1" TextChanged="txtEpisodeNumZeroPad_TextChanged" LostFocus="txtEpisodeNumZeroPadding_LostFocus">2</TextBox>
                                <Label Name="label10" FontWeight="Bold" Margin="7,61,0,0" Height="26.484" VerticalAlignment="Top" Grid.Row="1" Foreground="#FFFFFFFF" HorizontalAlignment="Left" Width="139.841" Grid.ColumnSpan="2">Episode Num Zero Pad</Label>
                            </Grid>
                            <GroupBox Name="gbMovieProcessingOptions" Header="Processing Options" Margin="7,31,4,6.711">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="154*" />
                                        <ColumnDefinition Width="204.536*" />
                                    </Grid.ColumnDefinitions>
                                    <CheckBox Name="chkRenameTVFiles" FontWeight="Normal" Foreground="#FFFFFFFF" Height="Auto" IsChecked="True" Margin="10,87,99,0" RenderTransformOrigin="0.584,0.619" VerticalAlignment="Top" Content="Rename Files" Checked="chkRenameTVFiles_Checked" Unchecked="chkRenameTVFiles_Unchecked" />
