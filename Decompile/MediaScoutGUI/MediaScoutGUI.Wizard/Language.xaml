<Page x:Class="MediaScoutGUI.Wizard.Language" Title="Select Metadata Format" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Page.Resources>
    <XmlDataProvider x:Key="LanguagesDS" Source="/MediaScoutGUI.Resources/languages.xml" />
    <DataTemplate x:Key="nameTemplate">
      <TextBlock Text="{Binding Mode=OneWay, XPath=.}" />
    </DataTemplate>
  </Page.Resources>
  <Grid>
    <Grid.Background>
      <ImageBrush AlignmentX="Left" ImageSource="/MediaScoutGUI.Resources/Watermark.png" Stretch="None" TileMode="None" />
    </Grid.Background>
    <Button Name="btnNext" Content="Finish" Height="23" HorizontalAlignment="Left" Margin="338,129,0,0" VerticalAlignment="Top" Width="75" Click="btnNext_Click" />
    <Label Name="label1" Content="Select Language" Height="Auto" HorizontalAlignment="Left" Margin="90,4,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" />
    <ComboBox Name="lstLanguages" IsSynchronizedWithCurrentItem="True" ItemTemplate="{StaticResource nameTemplate}" Margin="100,57,131,74" ItemsSource="{Binding Mode=Default, Source={StaticResource LanguagesDS}, XPath=/Languages/Language/name}" />
  </Grid>
</Page>