<UserControl x:Class="MediaScoutGUI.Controls.zoomSlider" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dtsc="clr-namespace:MediaScoutGUI.Controls;assembly=MediaScoutGUI,Version=3.0.4.159,Culture=neutral,PublicKeyToken=1d3847494e713237">
  <Grid>
    <StackPanel Orientation="Horizontal">
      <StackPanel.Resources>
        <dtsc:DoubleToStringConverter x:Key="conv" />
      </StackPanel.Resources>
      <ComboBox Name="lblZoom" HorizontalAlignment="Left" FontWeight="Bold" HorizontalContentAlignment="Center" IsEditable="True" Width="58" Text="{Binding Mode=TwoWay, Path=Value, Converter={StaticResource conv}}">
        <ComboBox.Items>
          <ComboBoxItem Content="{Binding Mode=OneWay, ElementName=zoomslider, Path=Maximum, Converter={StaticResource conv}}" />
          <ComboBoxItem Content="100%" />
          <ComboBoxItem Content="{Binding Mode=OneWay, ElementName=zoomslider, Path=Minimum, Converter={StaticResource conv}}" />
        </ComboBox.Items>
      </ComboBox>
      <Slider Name="zoomslider" Height="23" Width="173" TickPlacement="BottomRight" Minimum="0.5" Maximum="2" Value="1" TickFrequency="0.1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" LargeChange="0.5" ValueChanged="zoomslider_ValueChanged" />
    </StackPanel>
  </Grid>
</UserControl>