<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Class="MediaScoutGUI.EpisodeImporter"
    mc:Ignorable="d">

    <Expander Margin="0,4,0,4">
        <Expander.Header>
            <Grid Width="253" Height="42">
                <Label x:Name="lblSeriesSSEE" VerticalAlignment="Top" Content="Series sSS eEE" d:LayoutOverrides="Width"/>
                <ProgressBar x:Name="pbImporting" Margin="0,0,8,0" VerticalAlignment="Bottom" Height="12.04"/>
            </Grid>
        </Expander.Header>
        <Grid Height="96">
            <Label x:Name="lblBytesCopied" Margin="8,8,8,0" Content="000000 of 000000 bytes" VerticalAlignment="Top"/>
            <TextBox x:Name="tbSourceFile" Margin="8,37.96,8,36.08" Text="C:\Path\to\Source\file.mkv" TextWrapping="Wrap" d:LayoutOverrides="Height"/>
            <TextBox x:Name="tbTargetFile" Margin="8,0,8,10.12" VerticalAlignment="Bottom" Text="C:\Path\to\Target\file.mkv" TextWrapping="Wrap"/>
        </Grid>
    </Expander>
</UserControl>
